<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2AAEFF"
    tools:context=".activityclass.billtips">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/viewbill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tipslbackbtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/arrow_back"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tips"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.55"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_semibold"/>

<!--                <ImageView-->
<!--                    android:id="@+id/searchbutton"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:src="@drawable/search"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:layout_weight="1.55"-->
<!--                    android:padding="5dp"-->
<!--                    android:layout_marginEnd="10dp"-->
<!--                    android:layout_alignParentRight="true" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:id="@+id/heading"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/whiteoutline">

                <LinearLayout
                    android:id="@+id/viewbillhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/readbill"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/tips"
                        android:layout_margin="20dp"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enhance Your Electricity Bill, "
                            android:textColor="#415861"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:layout_marginLeft="0dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read the following tips...."
                            android:textColor="#06AEFA"
                            android:textSize="15sp"
                            android:paddingBottom="20dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/audit"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Get Electricity Audit"
                            android:textColor="#292828"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                        <TextView
                            android:id="@+id/auditidtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Many utility companies offer a free home energy audit to customers, and it is well worth taking advantage of. If there is no such program in your area, conduct your.."
                            android:textColor="#727273"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp"/>


                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/dimswitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/dimmerswitch"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Install Dimmer Switches"
                            android:textColor="#292828"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                        <TextView
                            android:id="@+id/dimswitchidtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Use as much as need. The key to saving energy is within reach. Switch to dimmer switches, so you only use as much light as you need. "
                            android:textColor="#727273"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp"/>


                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/refrigerator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/refrigerator"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins"
                            android:layout_gravity="center"
                            android:text="Keep Your Fridge and\nFreezer Full"
                            android:textColor="#292828"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fridgeidtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Everyone always tells you to keep the fridge closed. But did you know that keeping your fridge and freezer full can also save your money? Food acts as insulation and.."
                        android:textColor="#727273"
                        android:fontFamily="@font/oxygen"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/waterheater"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/waterheater"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins"
                            android:layout_gravity="center"
                            android:text="Lower the Temperature on Your Hot Water Heater"
                            android:textColor="#292828"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/waterheateridtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thirteen percent of your home's electricity goes to heating water. You can lower this percentage, by setting your hot water heater to 130 to 140 degrees. For even.."
                        android:textColor="#727273"
                        android:fontFamily="@font/oxygen"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/led"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ledlight"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins"
                            android:layout_gravity="center"
                            android:text="Switch to LEDs"
                            android:textColor="#292828"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ledidtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LED lights bulbs use 90 percent less energy than incandescent bulbs. Switch out the most widely used.."
                        android:textColor="#727273"
                        android:fontFamily="@font/oxygen"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>