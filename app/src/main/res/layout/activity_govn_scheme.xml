<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2AAEFF"
    tools:context=".activityclass.checkyourbill">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/viewbill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/govnschmbackbtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/arrow_back"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Government Schemes"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.55"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_semibold"/>

                <ImageView
                    android:id="@+id/searchbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1.55"
                    android:padding="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentRight="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:id="@+id/heading"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/whiteoutline">

                <LinearLayout
                    android:id="@+id/viewbillhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/readbill"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/question"
                        android:padding="15dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find Government Schemes, "
                            android:textColor="#415861"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:layout_marginLeft="0dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Awail it's Benefits.."
                            android:textColor="#06AEFA"
                            android:textSize="15sp"
                            android:paddingBottom="20dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/scheme1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/oxygen"
                            android:gravity="center"
                            android:text="PM Kusum Yojana"
                            android:textColor="#292828"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM Kisan Urja Suraksha Evam Utthan Mahabhiyan"
                            android:textColor="#4D20F4"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"/>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/scheme2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/oxygen"
                            android:gravity="center"
                            android:text="UDAY-Scheme"
                            android:textColor="#292828"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ujwal Discom Assurance Yojana"
                            android:textColor="#4D20F4"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"/>


                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/scheme3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="SECI-Scheme"
                            android:textColor="#292828"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solar Energy Corporation of India Limited"
                            android:textColor="#4D20F4"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"/>


                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/scheme4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/navyblue">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="MNRE-Scheme"
                            android:textColor="#292828"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ministry of New and Renewable Energy"
                            android:textColor="#4D20F4"
                            android:fontFamily="@font/oxygen"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"/>


                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>